@model CouponDto
    <div class="container">
        <a asp-action="CouponIndex" class="btn-primary btn ">Back to List</a>
        <form asp-action="CouponCreate">
            <br />
            <div class="container border p-3">




                <h1 class=" text-center">Create Coupon</h1>
                <hr />
                <div class="row">
                    <div class="col-2">
                        <label class="  pt-2" style="font-size:20px;">Coupon Code</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="CouponCode" class="form-control" />
                        <span asp-validation-for="CouponCode" class="text-danger"/>
                    </div>
                    <div class="col-2">
                        <label class="  pt-2" style="font-size:20px;">Discount Amount</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="DiscountAmount" class="form-control" />
                        <span asp-validation-for="DiscountAmount" class="text-danger" />
                    </div>
                    <div class="col-2">
                        <label class="  pt-2" style="font-size:20px;">Minimal Amount</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="MinAmount" class="form-control" />
                        <span asp-validation-for="MinAmount" class="text-danger" />
                    </div>


                    <input type="submit" value="Create" class="btn btn-success form-control" />



                </div>

                <div>
                </div>
            </div>
        </form>
    </div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}